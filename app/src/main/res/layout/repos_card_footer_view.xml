<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#252965"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/updated_at_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            tools:text="@string/default_date" />

        <TextView
            android:id="@+id/created_at_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            tools:text="@string/default_date" />

        <TextView
            android:id="@+id/pushed_at_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            tools:text="@string/default_date" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/more_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/moredetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/more_detail"
            android:textColor="@android:color/white"

            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/moredetails"
            android:background="@drawable/right"

            />
    </RelativeLayout>
</LinearLayout>